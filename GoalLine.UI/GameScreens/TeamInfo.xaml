<UserControl x:Class="GoalLine.UI.GameScreens.TeamInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoalLine.UI.GameScreens" xmlns:Controls="clr-namespace:GoalLine.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1300">
    <Grid x:Name="grdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Controls:ListControl x:Name="lstPlayers" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" />
        <StackPanel x:Name="stkInfo1"  Grid.Column="1" Grid.Row="1" Margin="0,0,2,0">

        </StackPanel>
        <StackPanel x:Name="stkInfo2"  Grid.Column="2" Grid.Row="1" Margin="2,0,0,0">

        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="GoalLine.UI.SingleControls.PagingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoalLine.UI.SingleControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="GoBack" Text="&lt;" Grid.Column="0" HorizontalAlignment="Left" MouseLeftButtonUp="GoBack_MouseLeftButtonUp" Cursor="Hand" />
        <TextBlock x:Name="lblCaption" Text="CAPTION!" Grid.Column="1" HorizontalAlignment="Center" />
        <TextBlock x:Name="GoForward" Text="&gt;" Grid.Column="2" HorizontalAlignment="Right" MouseLeftButtonUp="GoForward_MouseLeftButtonUp" Cursor="Hand" />
    </Grid>
</UserControl>

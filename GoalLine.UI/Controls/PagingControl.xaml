<UserControl x:Class="GoalLine.UI.Controls.PagingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoalLine.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>

        <Button Style="{StaticResource PagingButton}" x:Name="GoBack" Click="GoBack_Click" Grid.Column="0">µ</Button>
        <TextBlock x:Name="lblCaption" Text="CAPTION!" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="..\Fonts\#Roboto Bold" />
        <Button Style="{StaticResource PagingButton}" x:Name="GoForward" Click="GoForward_Click" Grid.Column="2">¶</Button>
    </Grid>
</UserControl>

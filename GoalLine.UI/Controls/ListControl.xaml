<UserControl x:Class="GoalLine.UI.Controls.ListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoalLine.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblCaption" Text="TITLE OF LIST" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource DialogTitle}" />
        
        <ScrollViewer x:Name="scvRows" Grid.Row="2" VerticalScrollBarVisibility="Visible">
        
        </ScrollViewer>

    </Grid>
</UserControl>

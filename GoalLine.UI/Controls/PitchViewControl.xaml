<UserControl x:Class="GoalLine.UI.Controls.PitchViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoalLine.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="480">
    <Grid  Width="480" Height="300" Background="Green">
        <Image x:Name="PitchImage" Width="480" Height="300" />
        
        <Canvas x:Name="PitchCanvas" Width="480" Height="300">
            <Image x:Name="BallImage" />
        </Canvas>
        
    </Grid>
</UserControl>
